#!/bin/bash
k="\033[1;33m"
b1(){
echo -e $k"                     (+++++++++++)                                                       "
echo -e $k"                  (++++)                                                                 "
echo -e $k"               (+++)                                                                     "
echo -e $k"             (+++)                                                                       "
echo -e $k"            (++)                                                                         "
echo -e $k"            [~]                                                                          "
echo -e $k"            | | (~)  (~)  (~)    /~~~~~~~~~~~~                                           "
echo -e $k"         /~~~~~~~~~~~~~~~~~~~~~~~  [~_~_] |    * * * /~~~~~~~~~~~|                       "
echo -e $k"       [|  %___________________           | |~~~~~~~~            |                       "
echo -e $k"         \[___] ___   ___   ___\  No. 4   | |   A.T. & S.F.      |                       "
echo -e $k"      /// [___+/-+-\-/-+-\-/-+ \\_________|=|____________________|=  NEtNoott....        "
echo -e $k"    //// @-=-@ \___/ \___/ \___/  @-==-@      @-==-@      @-==-@                         "
echo -e $k" ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~                   "

}
b2(){
echo -e $k"                                (+++++++++++)                                                       "
echo -e $k"                             (++++)                                                                 "
echo -e $k"                          (+++)                                                                     "
echo -e $k"                        (+++)                                                                       "
echo -e $k"                       (++)                                                                         "
echo -e $k"                       [~]                                                                          "
echo -e $k"                       | | (~)  (~)  (~)    /~~~~~~~~~~~~                                           "
echo -e $k"                    /~~~~~~~~~~~~~~~~~~~~~~~  [~_~_] |    * * * /~~~~~~~~~~~|                       "
echo -e $k"                  [|  %___________________           | |~~~~~~~~            |                       "
echo -e $k"                    \[___] ___   ___   ___\  No. 4   | |   A.T. & S.F.      |                       "
echo -e $k"                 /// [___+/-+-\-/-+-\-/-+ \\_________|=|____________________|=  NEtNoott....        "
echo -e $k"               //// @-=-@ \___/ \___/ \___/  @-==-@      @-==-@      @-==-@                         "
echo -e $k"            ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~                   "

}
b3(){
echo -e $k"                                             (+++++++++++)                                                       "
echo -e $k"                                          (++++)                                                                 "
echo -e $k"                                       (+++)                                                                     "
echo -e $k"                                     (+++)                                                                       "
echo -e $k"                                    (++)                                                                         "
echo -e $k"                                    [~]                                                                          "
echo -e $k"                                    | | (~)  (~)  (~)    /~~~~~~~~~~~~                                           "
echo -e $k"                                 /~~~~~~~~~~~~~~~~~~~~~~~  [~_~_] |    * * * /~~~~~~~~~~~|                       "
echo -e $k"                               [|  %___________________           | |~~~~~~~~            |                       "
echo -e $k"                                 \[___] ___   ___   ___\  No. 4   | |   A.T. & S.F.      |                       "
echo -e $k"                              /// [___+/-+-\-/-+-\-/-+ \\_________|=|____________________|=  NEtNoott....        "
echo -e $k"                            //// @-=-@ \___/ \___/ \___/  @-==-@      @-==-@      @-==-@                         "
echo -e $k"                         ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~                   "

}
for (( i = 0; i <= 3; i++ )); do
	clear
	b3
	sleep 1
	clear
	b2
	sleep 1
	clear
	b1
	sleep 1
	clear
	b1
	sleep 1
	clear
	b2
	sleep 1
	clear
	b3 
	sleep 1
done
cp baper /usr/bin
mkdir /opt/baper
mkdir /opt/baper/coli
cp coli/* /opt/baper/coli
cp install /opt/baper